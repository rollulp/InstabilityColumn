<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    
    <!--
    <style name="AppBaseTheme" parent="Theme.Base.AppCompat.Dialog.FixedSize">
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>
    
    <style name="Titolo" parent="@android:style/TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="Teoria" parent="@android:style/TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="BigText" parent="@android:style/TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_span">3</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="SmallText" parent="@android:style/TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_span">3</item>
        <item name="android:textSize">40sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textIsSelectable">true</item>
    </style>
    
    <style name="Text">        
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="Riga">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Immagine" parent="@style/BigText">
        <item name="android:layout_height">150dp</item>
    </style>

</resources>
