<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray"
    tools:context="com.rollulp.shearstress.MainActivity" >
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
	    android:orientation="vertical"
	    android:scrollbars="none"
        android:layout_weight="1" >
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    tools:context="com.rollulp.shearstress.MainActivity" >
	
			<TextView
			    android:paddingTop="25dp"
			    android:paddingBottom="25dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:text="@string/results"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textSize="40sp" />
		    <TextView
		        android:id="@+id/risultato1"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:gravity="center"
		        android:text="Risultato 1"
		        android:textSize="23sp" />
		
		    <TextView
		        android:id="@+id/risultato2"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:gravity="center"
		        android:text="Risultato 2"
		        android:textSize="23sp" />
		
		    <TextView
		        android:id="@+id/risultato3"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:gravity="center"
		        android:text="Risultato 3"
		        android:textSize="23sp" />
		        
		    <TextView
		        android:id="@+id/risultato4"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:gravity="center"
		        android:text="Risultato 4"
		        android:textSize="23sp" />
		        
		    <TextView
		        android:id="@+id/risultato5"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:gravity="center"
		        android:text="Risultato 5"
		        android:textSize="23sp" />
		        
		    <TextView
		        android:id="@+id/risultato6"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:gravity="center"
		        android:text="Risultato 6"
		        android:textSize="23sp" />
		
		</LinearLayout>
    </ScrollView>

</LinearLayout>
